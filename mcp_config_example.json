{
    "mcpServers": {
      "brave-search": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-brave-search"
        ],
        "env": {
          "BRAVE_API_KEY": "your-brave-api-key"
        }
      },
      "codetide": {
        "command": "uvx",
        "args": [
          "--from",
          "codetide",
          "codetide-mcp-server"
        ],
        "env": {
          "CODETIDE_WORKSPACE": "./"
        }
      }
    }
  }